<VirtualHost *:80>
	ServerAdmin admin@twine

	DocumentRoot /vagrant/src/
	
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	
	<Directory /vagrant/src/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>
	
	WSGIDaemonProcess etl processes=2 maximum-requests=500 threads=1
        WSGIScriptAlias /etl /vagrant/src/flaskapps/etl/ETL/etl.wsgi
	<Directory /vagrant/src/flaskapps/etl/ETL>
		WSGIProcessGroup etl
		WSGIApplicationGroup %{GLOBAL}
		Order deny,allow
		Allow from all
	</Directory>

	ErrorLog /var/log/apache2/error.log
	LogLevel warn
	CustomLog /var/log/apache2/access.log combined
</VirtualHost>
